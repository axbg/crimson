<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/bookList_image_shimmer"
        android:layout_width="82dp"
        android:layout_height="123dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/shimmerGray"
        android:contentDescription="@string/BOOK_COVER_ALT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bookList_book_shimmer"
        android:layout_width="82dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:background="@color/shimmerGray"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookList_image_shimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>